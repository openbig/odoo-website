<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="contact_eval_snippet" inherit_id="website.snippets" name="E-Mail Subscribe">
	<xpath expr="//div[@id='snippet_content']" position="inside">
			
			<div>
				<div class="oe_snippet_thumbnail">
					<img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_text_block.png"/>
					<span class="oe_snippet_thumbnail_title">Contact Eval</span>
				</div>
				<section class="oe_snippet_body js_contact_eval">
					<div class="form-inline js_contact_eval_form">
							<input name="lead_name" type="text" required="True" placeholder="your name" class="form-control js_lead_name"></input>
							<input name="lead_email" type="email" required="True" placeholder="your email" class="form-control js_lead_email"></input>
							<button class="btn js_contact_eval_btn">Confirm</button>
					</div>
					<p class="js_mg_details hidden well well-sm">
                    	Thank you! We will process your request soon!
                	</p>
				</section>
			</div>
	</xpath>
	<xpath expr="//div[@id='snippet_options']" position="inside">
		<div data-snippet-option-id='contact_eval_snippet'
				data-selector=".js_contact_eval"
				data-selector-siblings="p, h1, h2, h3, blockquote, .well, .panel">
				<li>
					<a href="#" class="button js_contact_eval_group">Group</a>
				</li>
			</div>
	</xpath>
</template>
</data>
</openerp>